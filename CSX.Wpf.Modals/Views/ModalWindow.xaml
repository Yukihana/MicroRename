<Window x:Class="CSX.Wpf.Modals.Views.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSX.Wpf.Modals.Views"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="ModalWindow" MinWidth="500">
    <StackPanel>
        <Border x:Name="ContentPanel">
        </Border>
        <WrapPanel x:Name="ButtonsPanel" HorizontalAlignment="Center">
            <WrapPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DefaultButtonStyle}">
                    <Setter Property="Width" Value="100" />
                    <Setter Property="Height" Value="30" />
                </Style>
            </WrapPanel.Resources>
        </WrapPanel>
    </StackPanel>
</Window>
<UserControl x:Class="CSX.Wpf.Modals.SubModals.MessageModal.MessageModalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
             SnapsToDevicePixels="True" UseLayoutRounding="True"
             MinWidth="400" MinHeight="80"
             DataContextChanged="OnDataContextChanged">

    <DockPanel Margin="12">
        <Image x:Name="MessageIcon"
               DockPanel.Dock="Left"
               Width="48" Height="48"
               Margin="12" />

        <TextBlock x:Name="MessageText"
                   VerticalAlignment="Center"
                   Margin="12"
                   Text="This is the message content." />
    </DockPanel>
</UserControl>
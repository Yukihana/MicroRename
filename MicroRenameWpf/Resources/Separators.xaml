<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="HorizontalSeparator3DFill" x:Shared="False"  StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0.5" Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
        <GradientStop Offset="0.5" Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Rectangle}" x:Key="StatusBarSeparator3D">
        <Setter Property="Margin" Value="5 0"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Width" Value="2"/>
        <Setter Property="Fill" Value="{StaticResource HorizontalSeparator3DFill}"/>
    </Style>
    
</ResourceDictionary>